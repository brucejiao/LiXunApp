<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--1-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!--头像-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="13dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/lx_header_img"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:src="@drawable/default_headimg" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="7dp"
                android:ellipsize="end"
                android:maxEms="4"
                android:singleLine="true"
                android:text="熊大大大da da "
                android:textSize="@dimen/text_size_10" />

            <ImageView
                android:id="@+id/certification_img"
                android:layout_width="37dp"
                android:layout_height="11dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="@color/accent_material_dark" />

        </LinearLayout>
        <!--找寻信息-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="13dp"
            android:orientation="vertical">
            <!--标题-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lx_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="寻找我的宠物狗法克"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/lx_isfind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:background="@drawable/editsharp_green"
                    android:text="找宠"
                    android:textSize="@dimen/text_size_9" />

                <TextView
                    android:id="@+id/lx_isgenerailze"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/editsharp_green"
                    android:text="全国推广"
                    android:textSize="@dimen/text_size_9" />

            </LinearLayout>
            <!--地点-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="11dp"
                    android:layout_gravity="center"
                    android:background="@drawable/address" />

                <TextView
                    android:id="@+id/lx_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="丢失地：电信一区 艾欧尼亚 野区"
                    android:textSize="@dimen/text_size_9" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_marginLeft="50dp"
                    android:background="@color/accent_material_dark"
                    android:text="悬赏金"
                    android:textSize="@dimen/text_size_9" />

                <TextView
                    android:id="@+id/lx_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="50元"
                    android:textColor="@color/short_red"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>

            <TextView
                android:id="@+id/lx_content"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="13dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="床前明月光，疑是地上霜。举头望明月，低头思故乡。鹅鹅鹅，曲向想提昂个ad阿萨德阿萨德啊实打实大asdwqqweqwe"
                android:textSize="@dimen/text_size_11" />
        </LinearLayout>


    </LinearLayout>

    <!--2-->
    <!--图片-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="77dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/lx_img_one"
            android:layout_width="67dp"
            android:layout_height="67dp"
             />
<!--android:background="@drawable/start_icon"-->
        <ImageView
            android:id="@+id/lx_img_two"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:layout_marginLeft="8dp"
           />

        <ImageView
            android:id="@+id/lx_img_three"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:layout_marginLeft="8dp"
            />
    </LinearLayout>

    <!--3-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="77dp"
        android:layout_marginTop="@dimen/space_13"
        android:orientation="horizontal">
        <!--发布时间-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="11dp"
            android:layout_gravity="center"
            android:background="@drawable/time" />

        <TextView
            android:id="@+id/lx_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="12分钟前发布"
            android:textSize="@dimen/text_size_9" />
        <!--查看人数-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="11dp"
            android:layout_gravity="center"
            android:layout_marginLeft="65dp"
            android:background="@drawable/browse" />

        <TextView
            android:id="@+id/lx_looker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_gravity="center"
            android:text="12"
            android:textSize="@dimen/text_size_9" />
        <!--关注人数-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="11dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/space_21"
            android:background="@drawable/guanzhu" />

        <TextView
            android:id="@+id/lx_focuson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:text="13"
            android:textSize="@dimen/text_size_9" />
        <!--留言人数-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="11dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/space_21"
            android:background="@drawable/comments" />

        <TextView
            android:id="@+id/lx_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:text="14"
            android:textSize="@dimen/text_size_9" />
    </LinearLayout>

</LinearLayout>
